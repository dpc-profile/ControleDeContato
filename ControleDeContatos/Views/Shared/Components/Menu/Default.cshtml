@model UsuarioModel

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Olá, @Model.Nome</a>

<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
  aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>

<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
  <ul class="navbar-nav flex-grow-1">

    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" data-cy="home">Página Inicial</a>
    </li>

    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Contato" asp-action="Index" data-cy="contato">Contatos</a>
    </li>

    @if (Model.Perfil == ControleDeContatos.Enums.PerfilEnums.Admin)
    {
      <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index" data-cy="usuario">Usuarios</a>
      </li>
    }

    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="AlterarSenha" asp-action="Index" data-cy="alterarSenha">Alterar Senha</a>
    </li>

    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Sair" data-cy="sair">Sair</a>
    </li>

  </ul>
</div>