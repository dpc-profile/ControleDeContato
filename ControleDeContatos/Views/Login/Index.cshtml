@using ControleDeContatos.Models
@model LoginModel
@{
  ViewData["Title"] = "Login";
  Layout = "_LayoutDeslogado";
}

@if (TempData["MensagemSucesso"] != null)
{
  <div class="alert alert-success" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
    @TempData["MensagemSucesso"]
</div>
}

@if (TempData["MensagemErro"] != null)
{
  <div class="alert alert-danger" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
    @TempData["MensagemErro"]
</div>
}

<br />

<form asp-controller="Login" asp-action="Entrar" method="post">
  <div class="mb-3">
    <label for="login" class="form-label" data-cy="login">Login</label>
    <input type="text" asp-for="Login" class="form-control" id="login">
    @Html.ValidationMessageFor(x => x.Login)
  </div>

  <div class="mb-3">
    <label for="senha" class="form-label" data-cy="senha">Senha</label>
    <input type="password" asp-for="Senha" class="form-control" id="senha">
    @Html.ValidationMessageFor(x => x.Senha)
  </div>

  <p class="mb-4 text-sm mx-auto" data-cy="redefinirSenha">
    Esqueceu sua senha?
    <a asp-controller="Login" asp-action="RedefinirSenha" class="text-primary text-gradient font-weight-bold">Redefinir
      minha senha</a>
  </p>

  <button type="submit" class="btn btn-primary btn-block" data-cy="submit">Entrar</button>
</form>